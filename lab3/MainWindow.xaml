<Window x:Class="lab3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="200*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="textbox1" Grid.Row="0" Grid.Column="0" FontSize="30" Margin="20,29,20,40">Введите число:</TextBlock>
        <TextBox x:Name="answer" Grid.Column ="1"  FontSize="30" Margin="20,40" Grid.Row="1" IsReadOnly="True"></TextBox>
        <TextBox x:Name="answer1" Grid.Column ="0"  FontSize="30" Margin="20,40" Grid.Row="1" IsReadOnly="True"></TextBox>
        <TextBox x:Name="textbox" FontSize="30" Margin="40,40,39,40" Grid.Column="1"/>
        <Button Content="вычислить"  Click="Button_Click" FontSize="30" Margin="40,21,60,19" Grid.Row="2" Grid.Column="1"/>
    </Grid>
</Window>
